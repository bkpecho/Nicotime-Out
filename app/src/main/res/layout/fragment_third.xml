                                android:shadowColor="@color/dead_red"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="1"
                                android:text="mins"
                                android:textColor="@color/black"
                                android:textSize="18sp" />
                        </LinearLayout>

